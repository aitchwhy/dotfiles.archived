##
# This is Git's per-user configuration file.
##

[core]
	editor = vim
	excludesfile = /Users/test/dotfiles/.gitignore_global

[alias]
	mylog = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=relative

[color]
	ui = true

[format]
	pretty = oneline

[push]
	default = simple

[user]
	name = hdd2k
	email = hank.lee.qed@gmail.com

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
    required = true

[pager]
    diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX

