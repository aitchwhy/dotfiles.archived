#-------------------------------------------------------------------------------
# ls command colorized output setting
#-------------------------------------------------------------------------------

alias ls='ls --color=auto'

#-------------------------------------------------------------------------------
# Docker
#-------------------------------------------------------------------------------

alias dc="docker-compose"

#-------------------------------------------------------------------------------
# Git (sensible aliases + https://hackernoon.com/be-125-more-efficient-with-git-60556a1ce971)
#-------------------------------------------------------------------------------

# GIT ADD
alias ga='git add'
alias gaa='git add --all'
alias gap='git add --patch'

# GIT STATUS
alias gs='git status'

# GIT BRANCH
alias gb='git branch'
alias gbr='git recent'
alias gba='git branch -a'
alias gbd='git branch -d'

# GIT CHECKOUT
alias gco='git checkout "$(git recent-branches | fzf)"' # command sub quoted to avoid execution before alias call
alias gcob="git checkout -b"


# GIT BLAME
alias gbl='git blame'

# GIT COMMIT
alias gc='git commit -v'
alias gc!='git commit -v --amend'
# -a option : auto stage added/modified but don't mind files not known to git
alias gca='git commit -v -a'
alias gca!='git commit -v -a --amend'

# GIT STASH
alias gst="git stash"

# GIT PUSH
alias gp="git push"

# GIT PULL
alias gl="git pull"

# GIT DIFF
alias gd="git diff"

# GIT CONFIG
alias gcnf="git config"

# GIT CONFIG
alias gw="git worktree"

# GIT MERGE
alias gm="git merge"
alias gma="git merge --abort"

# GIT REBASE (useful for squashing commits too) -- Squashing 4 commits (git rebase -i HEAD~4)
alias gr="git rebase"
alias gri="git rebase -i"
alias gra="git rebase --abort"
alias grc="git rebase --continue"

# Git-recent (recent git branches plugin : https://github.com/paulirish/git-recent)


# Git-open (open repo/branch in browser plugin : https://github.com/paulirish/git-open)


#-------------------------------------------------------------------------------
# Improving CLI toolset - https://remysharp.com/2018/08/23/cli-improved
#-------------------------------------------------------------------------------

alias cat='bat'
alias ping='prettyping --nolegend'
alias help='tldr'
alias du='ncdu --color dark -rr -x --exclude .git'
alias xxd='hexyl'

#-------------------------------------------------------------------------------
# Vim -> NVim (muscle memory)
#-------------------------------------------------------------------------------
if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
fi
