pathadd "$HOME/dotfiles/scripts"

#-------------------------------------------------------------------------------
# Emacs binaries
#-------------------------------------------------------------------------------
pathadd "$HOME/.emacs.d/bin"

#-------------------------------------------------------------------------------
# Golang
