#-------------------------------------------------------------------------------
# Load Node global installed binaries
#-------------------------------------------------------------------------------

PATH="/usr/local/opt/node@6/bin:$PATH"

#-------------------------------------------------------------------------------
# Use project specific binaries before global ones
#-------------------------------------------------------------------------------

PATH="node_modules/.bin:vendor/bin:$PATH"

#-------------------------------------------------------------------------------
# Make sure PHP 7 is loaded
#-------------------------------------------------------------------------------

#export PATH="$(brew --prefix homebrew/php/php71)/bin:$PATH"

#-------------------------------------------------------------------------------
# Make sure coreutils are loaded before system commands
#-------------------------------------------------------------------------------

# TODO: below is too slow!!! (0.5 ~ 0.8 sec) for (brew --prefix)
# PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"
PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

#-------------------------------------------------------------------------------
# Local bin directories before anything else
#-------------------------------------------------------------------------------
PATH="/usr/local/bin:/usr/local/sbin:$PATH"

#-------------------------------------------------------------------------------
# Composer
#-------------------------------------------------------------------------------

#PATH="$PATH:$HOME/.composer/vendor/bin"

#-------------------------------------------------------------------------------
# Add RVM to PATH for scripting
#-------------------------------------------------------------------------------

#export PATH="$PATH:$HOME/.rvm/bin"

#-------------------------------------------------------------------------------
# Load custom commands
#-------------------------------------------------------------------------------

export PATH="$DOTFILES/bin:$PATH"

#-------------------------------------------------------------------------------
# pipsi paths
#-------------------------------------------------------------------------------
export PATH="$HOME/.local/bin:$PATH"

#-------------------------------------------------------------------------------
# Conda path
#-------------------------------------------------------------------------------
export PATH="$HOME/workspace/anaconda3/bin:$PATH"


#-------------------------------------------------------------------------------
# k8s tools (Lacework)
#-------------------------------------------------------------------------------

export PATH="$HOME/lacework/k8s/tools:$PATH"
export PATH="$HOME/lacework/k8s/scripts:$PATH"
export PATH="$HOME/lacework/k8s/scripts:$PATH"
